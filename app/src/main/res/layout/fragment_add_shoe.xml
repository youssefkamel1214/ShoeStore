<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".AddShoeFragment">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        android:padding="12dp"
        app:cardBackgroundColor="@color/colorpink">
        <!--this linearlayout used to put views under each other -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:labelFor="@id/shoesname"
                android:text="@string/shoes_name"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <EditText
                android:padding="8dp"
                android:id="@+id/shoesname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/rounded_edit_text"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textSize="20sp"
                tools:ignore="DuplicateSpeakableTextCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:labelFor="@id/shoedescrtiption"
                android:text="@string/shoes_description"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <EditText
                android:padding="8dp"
                android:id="@+id/shoedescrtiption"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/rounded_edit_text"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textSize="20sp"
                tools:ignore="DuplicateSpeakableTextCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:labelFor="@id/company"
                android:text="@string/company"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <EditText
                android:padding="8dp"
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/rounded_edit_text"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textSize="20sp"
                tools:ignore="DuplicateSpeakableTextCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:labelFor="@id/size"
                android:text="@string/size"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <EditText
                android:padding="8dp"
                android:id="@+id/size"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/rounded_edit_text"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                tools:ignore="DuplicateSpeakableTextCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:labelFor="@id/price"
                android:text="@string/price"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <EditText
                android:padding="8dp"
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/rounded_edit_text"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                tools:ignore="DuplicateSpeakableTextCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:labelFor="@id/imageurl"
                android:text="@string/image_url"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <EditText
                android:padding="8dp"
                android:id="@+id/imageurl"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/rounded_edit_text"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textSize="20sp"
                tools:ignore="DuplicateSpeakableTextCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            <!-- this constraintlayout used to craete chains horzintally with spread sheet-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp">
                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/buttonshape"
                    android:backgroundTint="@color/white"
                    android:text="@string/cancel_opreation"
                    android:textSize="16sp"
                    android:textColor="@color/colorpink"
                    app:layout_constraintEnd_toStartOf="@+id/addbutton"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TextContrastCheck" />
                <Button
                    android:id="@+id/addbutton"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/buttonshape"
                    android:backgroundTint="@color/white"
                    android:text="@string/add_shoes"
                    android:textColor="@color/colorpink"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/cancel_button"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TextContrastCheck" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</FrameLayout>
</layout>